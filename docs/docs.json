{
	"title": "Dataline Sport API",
	"api": "https://sportti.org/sites/[team]/",
	"creator": {
		"name": "Timo Anttila",
		"company": "Tuspe Design Oy",
		"email": "moro@tuspe.com"
	},
	"updated": "07.03.2021",
	"paths": [
		{
			"type": "GET",
			"items": [
				{
					"req": "menu",
					"id": "menu",
					"summary": "Main menu and basic information.",
					"desc": "Returns the basic information of the sports club to the website and the information of the main menu.",
					"responses": [
						{
							"name": 200,
							"desc": "Returns the requested information.",
							"type": "object"
						},
						{
							"name": 400,
							"desc": "Bad request.",
							"type": "object",
							"ref": "Error"
						}
					],
					"updated": "06.03.2021"
				},
				{
					"req": "home",
					"id": "home",
					"summary": "Home page content for a sports club.",
					"desc": "Returns all element information on the front page of the sports club's website ",
					"responses": [
						{
							"name": 200,
							"desc": "Returns the requested information.",
							"type": "object"
						},
						{
							"name": 400,
							"desc": "Bad request.",
							"type": "object",
							"ref": "Error"
						}
					],
					"updated": "07.02.2021"
				},
				{
					"req": "games",
					"id": "games",
					"summary": "Match search.",
					"desc": "Returns a certain amount of matches for the certain season. Returns all future or past matches by default.",
					"example": "games?year=2021&limit=10",
					"params": [
						{
							"name": "year",
							"desc": "Desired season.",
							"type": "number",
							"in": "query",
							"req": true,
							"example": "year=2021"
						},
						{
							"name": "limit",
							"desc": "Desired number of results.",
							"type": "number",
							"in": "query",
							"example": "limit=50"
						},
						{
							"name": "team",
							"desc": "Returns all games to the team.",
							"type": "number",
							"in": "query",
							"example": "team=13066"
						},
						{
							"name": "division",
							"desc": "Returns all games in the division.",
							"type": "number",
							"in": "query",
							"example": "division=13066"
						}
					],
					"responses": [
						{
							"name": 200,
							"desc": "Returns the requested information.",
							"type": "array"
						},
						{
							"name": 201,
							"desc": "No content.",
							"type": "object",
							"ref": "Error"
						},
						{
							"name": 400,
							"desc": "Bad request.",
							"type": "object",
							"ref": "Error"
						}
					],
					"updated": "07.03.2021"
				},
				{
					"req": "news",
					"id": "news",
					"summary": "News search.",
					"desc": "Returns the desired amount of news for the desired year.",
					"example": "news?year=2021&limit=10",
					"params": [
						{
							"name": "year",
							"desc": "Desired year, default current year.",
							"type": "number",
							"in": "query",
							"example": "year=2021"
						},
						{
							"name": "limit",
							"desc": "Desired number of results, default 20.",
							"type": "number",
							"in": "query",
							"example": "limit=50"
						}
					],
					"responses": [
						{
							"name": 200,
							"desc": "Returns the requested information.",
							"type": "array"
						},
						{
							"name": 201,
							"desc": "No content.",
							"type": "object",
							"ref": "Error"
						},
						{
							"name": 400,
							"desc": "Bad request.",
							"type": "object",
							"ref": "Error"
						}
					],
					"updated": "06.03.2021"
				},
				{
					"req": "page",
					"id": "page",
					"summary": "Returns page information.",
					"desc": "Returns the content of a specific page from a sports club site. The search term is either page ID or path.",
					"example": "page?id=10520 or page?path=example-path",
					"params": [
						{
							"name": "id",
							"type": "number",
							"in": "query",
							"req": true,
							"example": "id=1050"
						},
						{
							"name": "path",
							"type": "string",
							"in": "query",
							"req": true,
							"example": "path=example-page"
						}
					],
					"responses": [
						{
							"name": 200,
							"desc": "Returns the requested information.",
							"type": "object"
						},
						{
							"name": 404,
							"desc": "Not Found.",
							"type": "object",
							"ref": "Error"
						},
						{
							"name": 400,
							"desc": "Bad request.",
							"type": "object",
							"ref": "Error"
						}
					],
					"updated": "06.03.2021"
				},
				{
					"req": "players",
					"id": "players",
					"summary": "Players and their helpers.",
					"desc": "Returns all the players and helpers of the team. ID or path is only required if you want information for a specific player.",
					"example": "players, players?id=14680 or players?path=timo-anttila",
					"params": [
						{
							"name": "id",
							"type": "number",
							"in": "query",
							"example": "id=1050"
						},
						{
							"name": "path",
							"type": "string",
							"in": "query",
							"example": "path=timo-anttila"
						}
					],
					"responses": [
						{
							"name": 200,
							"desc": "Returns all players by category.",
							"type": "array"
						},
						{
							"name": 200,
							"desc": "Returns all information for a specific player.",
							"type": "object"
						},
						{
							"name": 400,
							"desc": "Bad request.",
							"type": "object",
							"ref": "Error"
						}
					],
					"updated": "06.03.2021"
				}
			]
		}
	],
	"refs": {
		"Error": "{\n  \"message\": {\n    \"type\": \"string\",\n    \"maxLength\": 50\n  }\n}"
	},
	"security": "All paths with the lock image require token verification. The token is sent in the header format: \"Authorization: Bearer <token>\". Mobile applications must submit the code assigned to them and the domains of the websites will be verified before making any requests."
}