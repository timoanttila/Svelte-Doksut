{
	"title": "Dataline Sport API",
	"api": "https://sportti.org/sites/[team]/",
	"creator": {
		"name": "Timo Anttila",
		"company": "Tuspe Design Oy",
		"email": "moro@tuspe.com"
	},
	"updated": "07.03.2021",
	"paths": [
		{
			"type": "GET",
			"items": [
				{
					"req": "menu",
					"id": "menu",
					"summary": "Main menu and basic information.",
					"desc": "Returns the basic information of the sports club to the website and the information of the main menu.",
					"responses": [
						{
							"name": 200,
							"desc": "Returns the requested information.",
							"type": "object"
						},
						{
							"name": 400,
							"desc": "Bad request.",
							"type": "object",
							"ref": "Error"
						}
					],
					"updated": "06.03.2021"
				},
				{
					"req": "home",
					"id": "home",
					"summary": "Home page content for a sports club.",
					"desc": "Returns all element information on the front page of the sports club's website ",
					"responses": [
						{
							"name": 200,
							"desc": "Returns the requested information.",
							"type": "object"
						},
						{
							"name": 400,
							"desc": "Bad request.",
							"type": "object",
							"ref": "Error"
						}
					],
					"updated": "07.02.2021"
				},
				{
					"req": "games/[year]",
					"id": "games",
					"summary": "Match search.",
					"desc": "Returns the desired amount of matches for the desired year. Returns all future matches by default.",
					"example": "games/2021?limit=10",
					"params": [
						{
							"name": "limit",
							"desc": "Desired number of results.",
							"type": "number",
							"in": "query",
							"example": "limit=50"
						},
						{
							"name": "team",
							"desc": "Returns all games to the team.",
							"type": "number",
							"in": "query",
							"example": "team=13066"
						},
						{
							"name": "division",
							"desc": "Returns all games in the division.",
							"type": "number",
							"in": "query",
							"example": "division=13066"
						}
					],
					"responses": [
						{
							"name": 200,
							"desc": "Returns the requested information.",
							"type": "array"
						},
						{
							"name": 201,
							"desc": "No content.",
							"type": "object",
							"ref": "Error"
						},
						{
							"name": 400,
							"desc": "Bad request.",
							"type": "object",
							"ref": "Error"
						}
					],
					"updated": "06.03.2021"
				},
				{
					"req": "news/[year]",
					"id": "news",
					"summary": "News search.",
					"desc": "Returns the desired amount of news for the desired year.",
					"example": "news/2021?limit=10",
					"params": [
						{
							"name": "limit",
							"desc": "Desired number of results, default 20.",
							"type": "number",
							"in": "query",
							"example": "?limit=50"
						}
					],
					"responses": [
						{
							"name": 200,
							"desc": "Returns the requested information.",
							"type": "array"
						},
						{
							"name": 201,
							"desc": "No content.",
							"type": "object",
							"ref": "Error"
						},
						{
							"name": 400,
							"desc": "Bad request.",
							"type": "object",
							"ref": "Error"
						}
					],
					"updated": "06.03.2021"
				},
				{
					"req": "page/[id|path]",
					"id": "page",
					"summary": "Returns page information.",
					"desc": "Returns the content of a specific page from a sports club site. The search term is either page ID or path.",
					"example": "page/10520 or page/partners",
					"responses": [
						{
							"name": 200,
							"desc": "Returns the requested information.",
							"type": "object"
						},
						{
							"name": 404,
							"desc": "Not Found.",
							"type": "object",
							"ref": "Error"
						},
						{
							"name": 400,
							"desc": "Bad request.",
							"type": "object",
							"ref": "Error"
						}
					],
					"updated": "06.03.2021"
				},
				{
					"req": "players/[id|path]",
					"id": "players",
					"summary": "Players and their helpers.",
					"desc": "Returns all the players and helpers of the team. ID or path is only required if you want information for a specific player.",
					"example": "players, players/14680 or players/timo-anttila",
					"responses": [
						{
							"name": 200,
							"desc": "Returns all players by category.",
							"type": "array"
						},
						{
							"name": 200,
							"desc": "Returns all information for a specific player.",
							"type": "object"
						},
						{
							"name": 400,
							"desc": "Bad request.",
							"type": "object",
							"ref": "Error"
						}
					],
					"updated": "06.03.2021"
				}
			]
		}
	],
	"refs": {
		"Error": "{\n  \"message\": {\n    \"type\": \"string\",\n    \"maxLength\": 50\n  }\n}"
	},
	"security": "All paths in the lock image require token verification. The token is sent in the header format: \"Authorization: Bearer <token>\""
}