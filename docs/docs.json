					"users": [
						0,
						1
					],
					"params": [
						{
							"name": "sites",
							"desc": "The official domain of the club without an extension.",
							"req": true,
							"type": "string",
							"in": "query",
							"example": "joensuunkiekkopojat"
						}
					],
					"responses": [
						{
							"name": 200,
							"desc": "Returns all sports teams.",
							"type": "array"
						},
						{
							"name": 400,
							"desc": "Bad request.",
							"type": "object",
							"ref": "Error"
						}
					],
					"updated": "07.02.2021"
				},
				{
					"req": "sites/{domain}/home",
					"id": "menu",
					"summary": "Home page content for a sports club.",
					"desc": "Returns all element information on the front page of the sports club's website ",
					"users": [
						0,
						1
					],
					"params": [
						{
							"name": "domain",
							"desc": "The unique domain of the club.",
							"req": true,
							"type": "string",
							"in": "query"
						},
						{
							"name": "home",
							"req": true,
							"type": "string",
							"in": "query"
						}
					],
					"responses": [
						{
							"name": 200,
							"desc": "Returns the requested information.",
							"type": "object"
						},
						{
							"name": 400,
							"desc": "Bad request.",
							"type": "object",
							"ref": "Error"
						}
					],
					"updated": "06.02.2021"
				}
			]
		}
	],
	"refs": {
		"Error": "{\n  \"status\": {\n    \"type\": \"number\",\n    \"default\": 400,\n    \"minLength\": 3,\n    \"maxLength\": 3\n  },\n  \"message\": {\n    \"type\": \"string\",\n    \"maxLength\": 50\n  }\n}"
